<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <% @trips.each do |trip| %>
                <div class="well row">
                    <div class='col-sm-4'>
                        <%= link_to trip_path(id: trip.id) do %>
                            <h2><%= trip.name %></h2>
                        <% end %>
                    </div>
                    <div class='col-sm-4'>
                        <h4><%= "Out of: " << trip.depart_from %></h4>
                        <h4><%= "on: " << trip.depart_date_time.to_s %></h4>
                        <h3><%= "$" << trip.starting_price.to_s << "0+" %></h3>
                    </div>
                    <div class='col-sm-4'>
                        <h4><%= "Boat: " << trip.boat_id.to_s %></h4>
                        <h4><%= "Skipper: " << trip.skipper %></h4>
                        <h5><%= trip.available_seats.to_s << " seats available" %></h5>
                        <p><%= "Comments: " << trip.comments %></p>
                    </div>
                </div>
            <% end %>
        </div>
        <div class="col-md-1">
            <%= link_to "New Trip", new_trip_path, class: 'btn btn-primary' %>
        </div>
    </div>
</div>