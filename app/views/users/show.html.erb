<div class='container'>
    <div class='row'>
        <div class='col-md-8 col-md-offset-2'>
            <div class='well'>
                <div class='row'>
                    <div class='col-sm-4'>
                        <%= image_tag @user.profile.avatar.url, class: 'avatar-profile-main' %>
                        <h4><i class='fa fa-phone'></i><%= " (" << @user.profile.phone_number[0,3] << ") " << @user.profile.phone_number[3,3] << " - " << @user.profile.phone_number[6,4] %></h4>
                        <h4><%= @user.profile.contact_email %></h4>
                    </div>
                    <div class='col-sm-8'>
                        <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
                        <%= @user.profile.job_title %>
                        <div class='well'>
                            <p><%= @user.profile.description %></p>
                        </div>
                        <%= link_to "Account Management", edit_user_registration_path, class: 'btn btn-default' %>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>